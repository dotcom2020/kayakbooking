<h1>All Kayaks</h1>
<div>
  <ul>
    <% @kayaks.each do |kayak| %>
      <div>
        <%= link_to kayak_path(kayak) do %>
          <li>Proprietaire: <%= kayak.user.first_name %></li>
          <% if kayak.photo.attached? %>
            <li>
              <%= cl_image_tag kayak.photo.key, height: 300, width: 400, crop: :fill %>
            </li>
          <% end %>
          <li>address:<%= kayak.adress %></li>
          <li>type: <%= kayak.category %></li>
          <li>Price: <%= kayak.price_per_day %>â‚¬</li>
        <% end %>
      </div>
    <% end %>
  </ul>
</div>
